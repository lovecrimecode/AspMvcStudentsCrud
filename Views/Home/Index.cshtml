@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Students database</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last name</th>
                <th>Age</th>
                <th>Carreer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Student.Name</td>
                    <td>@item.Student.LastName</td>
                    <td>@item.Student.Phone</td>
                    <td>@item.Student.Carreer</td>
                    <td>
                        <form asp-action="RemoveFromDataBase" asp-controller="DataBase" method="post">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3>Total: @Model.CalculateTotal().ToString("C")</h3>
    <form asp-action="Checkout" asp-controller="Cart" method="post">
        <button type="submit" class="btn btn-success">Checkout</button>
    </form>
    }

</div>
